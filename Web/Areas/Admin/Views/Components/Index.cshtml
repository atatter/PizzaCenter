@using System.Web.UI.WebControls
@model IEnumerable<Domain.Component>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Komponendid</h3> <!-- VAJAB MUUTMIST -->
            </div><!-- /.box-header -->
            @Html.ActionLink("Lisa Komponent", "Create", new { }, new { @class = "btn btn-block btn-primary btn-flat" })
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nimetus</th>
                            <th>Lisandiks</th>
                            <th>Tegevused</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name.Value)</td>
                                <td></td>
                                <td>@*@Html.ActionLink("Edit", "Edit", new { id = item.PizzaId }) | @Html.ActionLink("Delete", "Delete", new { id = item.PizzaId })*@</td>
                            </tr>
                        }
                    <tfoot>
                        <tr>
                            <th>Nimetus</th>
                            <th>Lisandiks</th>
                            <th>Tegevused</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
