@model List<Domain.Component>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@Resources.Manage.Components_Header</h3>
            </div><!-- /.box-header -->
            @Html.ActionLink(Resources.Manage.Components_Add, "Create", new { }, new { @class = "btn btn-block btn-primary btn-flat" })
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ComponentName)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IsTopping)</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ComponentName</td>
                                <td><input type="checkbox" checked="@item.IsTopping" disabled="true" /></td>
                                <td>@Html.ActionLink(Resources.Common.Edit, "Edit", new { id = item.ComponentId }) | @Html.ActionLink(Resources.Common.Delete, "Delete", new { id = item.ComponentId })</td>
                            </tr>
                        }
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ComponentName)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IsTopping)</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
