@using System.Runtime.InteropServices.ComTypes
@model Web.Areas.Admin.ViewModels.TranslationsIndexViewModel

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@Resources.Manage.Translations_Header</h3>
            </div><!-- /.box-header -->
            @Html.ActionLink(Resources.Manage.Translations_Add, "Create", new { }, new { @class = "btn btn-block btn-primary btn-flat" })
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Translations.FirstOrDefault().Value)</th>
                            <th>@Html.DisplayNameFor(model => model.Translations.FirstOrDefault().Culture)</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Translations)
                        {
                            <tr>
                                <td>
                                    @if (Model.ViewHtml)
                                         {
                                             @Html.Raw(item.Value)
                                         }
                                         else
                                         {
                                             @item.Value
                                         }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Culture)</td>
                                <td>@Html.ActionLink(Resources.Common.Edit, "Edit", new { id = item.TranslationId }) | @Html.ActionLink(Resources.Common.Delete, "Delete", new { id = item.TranslationId })</td>
                            </tr>
                        }
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Translations.FirstOrDefault().Value)</th>
                            <th>@Html.DisplayNameFor(model => model.Translations.FirstOrDefault().Culture)</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
