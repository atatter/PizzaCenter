@model List<Domain.Pizza>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@Resources.Manage.Pizzas_Header</h3>
            </div><!-- /.box-header -->
            @Html.ActionLink(Resources.Manage.Pizzas_Add, "Create", new { }, new { @class = "btn btn-block btn-primary btn-flat" })
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PizzaName)</th>
                            <th>Komponendid</th>
                            <th>Hinnad</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PizzaName</td>
                                <td>Juust, ananass, tomat</td>
                                <td>Suur: 10.50, Keskmine: 8.60, Väike: 4.60</td>
                                <td>@Html.ActionLink(Resources.Common.Edit, "Edit", new { id = item.PizzaId }) | @Html.ActionLink(Resources.Common.Delete, "Delete", new { id = item.PizzaId })</td>
                            </tr>
                        }
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PizzaName)</th>
                            <th>Komponendid</th>
                            <th>Hinnad</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
