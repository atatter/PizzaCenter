@using Microsoft.Ajax.Utilities
@model Web.Areas.Admin.ViewModels.PizzaIndexViewModel

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@Resources.Manage.Pizzas_Header</h3>
            </div><!-- /.box-header -->
            @Html.ActionLink(Resources.Manage.Pizzas_Add, "Create", new { }, new { @class = "btn btn-block btn-primary btn-flat" })
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Pizzas.FirstOrDefault().PizzaName)</th>
                            <th>Komponendid</th>
                            <th>Hinnad</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Pizzas)
                        {
                            <tr>
                                <td>@item.PizzaName</td>
                                <td>
                                    @foreach (var component in item.ComponentInPizzas)
                                    {
                                        <span>@component.Component.ComponentName</span>
                                    }
                                </td>
                                <td>
                                    @foreach (var price in item.Prices)
                                    {
                                        <span>@price.PizzaSize.PizzaSizeName.Value _</span><span>@price.PriceType.PriceTypeName.Value:</span><span>@price.Value</span>
                                    }

                                </td>
                                <td>@Html.ActionLink(Resources.Common.Edit, "Edit", new {id = item.PizzaId}) | @Html.ActionLink(Resources.Common.Delete, "Delete", new {id = item.PizzaId})</td>
                            </tr>
                        }
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Pizzas.FirstOrDefault().PizzaName)</th>
                            <th>Komponendid</th>
                            <th>Hinnad</th>
                            <th>@Resources.Common.Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
