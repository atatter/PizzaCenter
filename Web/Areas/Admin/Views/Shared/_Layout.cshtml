                    <li><a href="@Url.Action("Index","Invoices",new { area = "Admin" })"><i class="fa fa-th"></i> <span>Invoices</span></a></li>
                    <li><a href="@Url.Action("Index", "Pizzas", new {area = "Admin"})"><i class="fa fa-pie-chart"></i> <span>Pizzas</span></a></li>
                    <li><a href="@Url.Action("Index","Components",new { area = "Admin" })"><i class="fa fa-th"></i> <span>Components</span></a></li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>Hidden stuff</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu" style="display: none;">
                            <li><a href="@Url.Action("Index", "PizzaSizes", new {area = "Admin"})"><i class="fa fa-circle-o"></i>Pizza sizes</a></li>
                            <li><a href="@Url.Action("Index", "PriceTypes", new {area = "Admin"})"><i class="fa fa-circle-o"></i>Price types</a></li>
                            <li><a href="@Url.Action("Index", "Coupons", new {area = "Admin"})"><i class="fa fa-circle-o"></i>Coupons</a></li>
                            <li><a href="@Url.Action("Index", "PaymentMethods", new {area = "Admin"})"><i class="fa fa-circle-o"></i>Payment Methods</a></li>
                            <li><a href="@Url.Action("Index","Translations",new { area = "Admin" })"><i class="fa fa-circle-o"></i>Translations</a></li>
                        </ul>
                    </li>                 
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Dashboard
                    <small>Control panel</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.0
            </div>
            <strong>Copyright &copy; 2014-2015 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights reserved.
        </footer>

    </div><!-- ./wrapper -->


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/cldr")
    @Scripts.Render("~/bundles/globalize")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/tinymce/tinymce.min.js")



    @Scripts.Render("~/bundles/adminltejs")


    @Scripts.Render("~/bundles/app")

    @RenderSection("scripts", required: false)
</body>
</html>