@model IEnumerable<Domain.Coupon>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Resources.Coupon.StartDate
        </th>
        <th>
            @Resources.Coupon.EndDate
        </th>
        <th>
            @Resources.Coupon.IsReusable
        </th>
        <th>
            @Resources.Coupon.HasBeenUsed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsReusable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasBeenUsed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CouponId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CouponId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CouponId })
        </td>
    </tr>
}

</table>
