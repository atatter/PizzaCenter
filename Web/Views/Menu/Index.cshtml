@model IEnumerable<Domain.Pizza>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-content">
    <div class="container">
        <h1>Menüü</h1>

        <h2>Pizza</h2>

        <img src="http://marijazaric.com/leonardo-pizza/img/photo-menu2.png" />



        @foreach (var item in Model)
        {
            <div class="pizza-item">
                <div class="heading">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                </div>
                <div class="description">
                    <p>@Html.DisplayFor(modelItem => item.PizzaDescription.Value)</p>
                </div>
            </div>
        }
    </div>
</div>
