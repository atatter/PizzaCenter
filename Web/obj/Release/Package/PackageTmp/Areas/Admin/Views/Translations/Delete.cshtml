@model Domain.Translation

@{
    ViewBag.Title = "Delete";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@Resources.Common.Delete - @Resources.Common.Delete_confirm</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm())
            {
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.MultiLangString.Value)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MultiLangString.Value)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Value)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Value)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Culture)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Culture)
                </dd>

            </dl>

        </div>
        <!-- /.box-body -->

        <div class="box-footer">

            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-primary">@Resources.Common.Delete</button>
            @Html.ActionLink(Resources.Common.Cancel, "Index", new { }, new { @class = "btn btn-danger" })


        </div>
    }
</div>

