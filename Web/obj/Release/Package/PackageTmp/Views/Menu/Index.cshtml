@model IEnumerable<Domain.Pizza>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-content">
    <div class="container">
        <h1>Menüü</h1>

        <h2>Pizza</h2>

        <img src="http://marijazaric.com/leonardo-pizza/img/photo-menu2.png" />

        <div class="btncont">@Html.ActionLink(@Resources.Domain.Menu_go, "Index", "Order", new { area = "" }, new { @class = "menubtn" })</div>

        @foreach (var item in Model)
        {
            <div class="pizza-item">
                <div class="heading">
                    <h3 >@Html.DisplayFor(modelItem => item.PizzaName.Value)</h3>
                    <span >@foreach (var price in item.Prices)
                    {
                        <span>@price.PizzaSize.PizzaSizeName.Value _</span><span>@price.PriceType.PriceTypeName.Value:</span><span>@price.Value</span>
                    }</span>
                </div>
                <div class="description">
                    <p>@foreach (var component in item.ComponentInPizzas)
                       {
                           @Html.DisplayFor(modelItem => component.Component.ComponentName.Value)<span>  </span> }</p>
                </div>
            </div>
        }
    </div>
</div>
